<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SyncMe.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="epamBlue">#39c2d7</Color>
            <Color x:Key="epamGrey">#424242</Color>
            
            <Color x:Key="syncBlue">#39c2d7</Color>
            <Color x:Key="syncWhite">#FFFFFF</Color>
            <Color x:Key="syncGrey">#757575</Color>
            <Color x:Key="syncBlack">#000000</Color>
        </ResourceDictionary>
        <Style x:Key="ToggleButtonStyle" TargetType="Switch">
            <Setter Property="OnColor" Value="{StaticResource epamBlue}"/>
            <Setter Property="Margin" Value="20,0,15,11"/>
            <Setter Property="IsToggled" Value="True"/>
            <Setter Property="ThumbColor" Value="{StaticResource epamGrey}"/>
        </Style>
    </Application.Resources>
</Application>